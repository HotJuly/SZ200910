}

.indexContainer .nav{
  display:flex;
  justify-content: space-around;
}

.indexContainer .nav .navItem{
  display:flex;
  flex-direction: column;
  align-items: center;
  font-size:28rpx;
}

.indexContainer .nav .navItem .iconfont{
  width:100rpx;
  height:100rpx;
  background: rgb(240, 19, 19);
  border-radius: 50%;
  font-size:50rpx;
  color:white;
  text-align: center;
