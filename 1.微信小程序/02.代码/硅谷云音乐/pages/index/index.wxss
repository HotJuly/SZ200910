.recommendContainer .recommendScroll{
  display:flex;
  height:300rpx;
  margin-top:20rpx;
}

.recommendContainer .recommendScroll .scrollItem{
  width:200rpx;
  flex-shrink:0;
  margin-right:20rpx;
}

.recommendContainer .recommendScroll .scrollItem .songImg{
  width:100%;
  height:200rpx;
  border-radius: 20rpx;
}

.recommendContainer .recommendScroll .scrollItem .songTitle{
  /* 
    单行文本溢出隐藏,并显示省略号 
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
  */

  /* webkit内核的盒模型 */
  display:-webkit-box;
  /* 用于设置几行时候溢出隐藏,并实现省略号 */
  -webkit-line-clamp:2;
  /* 用于告知当前文本的排列方向 */
  -webkit-box-orient: vertical;
  overflow:hidden;
}

.topContainer{
  margin:0 20rpx;
}

.topContainer .topSwiper {
  /* 
    问题:通过哪些方法可以将元素变成块元素
    解: 
        1.display:block
        2.float:left或right
        3.position:absolute或者fixed
        4.display:flex
   */
  height:400rpx;
}

.topContainer .topSwiper .topItem{
  width:97%;
  background:pink;
}

.topContainer .topSwiper .topItem .topContent{
  display:flex;
  align-items: center;
}

.topContainer .topSwiper .topItem .topTitle{
  font-size:24rpx;
}

.topContainer .topSwiper .topItem .topContent{
  margin:10rpx 0;
}

.topContainer .topSwiper .topItem .topContent .topImg{
  width:100rpx;
  height:100rpx;
  flex-shrink: 0;
  border-radius: 10rpx;
}

.topContainer .topSwiper .topItem .topContent .num{
  width:100rpx;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  flex-shrink: 0;
}

.topContainer .topSwiper .topItem .topContent .topName{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  /* width:100%; */
  flex-grow:1;
}