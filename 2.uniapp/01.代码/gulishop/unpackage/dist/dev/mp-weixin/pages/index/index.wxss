.indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-top: 20rpx;
}
.indexContainer .header .logo {
  width: 116rpx;
  height: 40rpx;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  margin: 0 20rpx;
}
.indexContainer .header .search {
  position: relative;
  background: #ffc0cb;
  width: 100%;
  height: 60rpx;
  border-radius: 10rpx;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  top: 50%;
  left: 20rpx;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.indexContainer .header .search input {
  height: 60rpx;
  padding-left: 60rpx;
}
.indexContainer .header .search input .placeholder {
  text-align: center;
  font-size: 24rpx;
  line-height: 60rpx;
  text-indent: -50rpx;
}
.indexContainer .header .username {
  width: 129rpx;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  margin: 0 20rpx;
  border-radius: 10rpx;
  color: #f00;
}
.indexContainer .navScroll {
  white-space: nowrap;
  height: 80rpx;
}
.indexContainer .navScroll .navItem {
  position: relative;
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}
.indexContainer .navScroll .navItem.active::after {
  content: "";
  height: 4rpx;
  width: 100%;
  background: #f00;
  position: absolute;
  bottom: 0;
  left: 0;
}

